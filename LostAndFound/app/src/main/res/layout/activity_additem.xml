<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginBottom="30dp"

            android:text="Add Missing Item"
            android:textAlignment="center"
            android:textSize="35dp"
            app:layout_constraintBottom_toTopOf="@+id/itemName"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="67dp" />


        <EditText
            android:id="@+id/itemName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="30dp"
            android:background="@color/browser_actions_bg_grey"
            android:ems="10"
            android:hint="Item Name"
            android:importantForAutofill="no"
            android:inputType="textShortMessage"
            android:textAlignment="center"
            android:textSize="30dp"
            app:layout_constraintBottom_toTopOf="@+id/description"
            tools:layout_editor_absoluteX="1dp">

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="30dp"
            android:background="@color/browser_actions_bg_grey"
            android:ems="10"
            android:hint="Description of the Item"
            android:importantForAutofill="no"
            android:textAlignment="center"
            android:textSize="30dp"
            app:layout_constraintBottom_toTopOf="@+id/LocationButton"
            tools:layout_editor_absoluteX="3dp">

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/locationView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="30dp"
            android:background="@color/browser_actions_bg_grey"
            android:ems="10"
            android:hint="Location lost"
            android:importantForAutofill="no"
            android:inputType="textShortMessage"
            android:textAlignment="center"
            android:textSize="30dp"
            tools:layout_editor_absoluteX="3dp">
        </EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dateLostButton"
                android:layout_width="294dp"
                android:layout_height="78dp"
                android:layout_marginBottom="128dp"
                android:layout_weight="1"
                android:text="Date Lost"
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@+id/dateView"
                tools:layout_editor_absoluteX="215dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal">

            <!--            <EditText-->
            <!--                android:id="@+id/locationView"-->
            <!--                android:layout_width="48dp"-->
            <!--                android:layout_height="match_parent"-->
            <!--                android:layout_marginEnd="16dp"-->
            <!--                android:layout_weight="1"-->
            <!--                android:background="@color/browser_actions_bg_grey"-->
            <!--                android:hint="Location lost"-->
            <!--                android:textAlignment="center"-->
            <!--                android:textSize="20dp"-->
            <!--                app:layout_constraintBottom_toTopOf="@+id/submitButton"-->
            <!--                app:layout_constraintEnd_toStartOf="@+id/dateView" />-->

            <TextView
                android:id="@+id/dateView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:layout_weight="1"
                android:background="@color/browser_actions_bg_grey"
                android:text="Date"
                android:textAlignment="center"
                android:textSize="30dp"
                app:layout_constraintBottom_toTopOf="@+id/cancel_button" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/submitButton"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="88dp"
                android:layout_weight="1"
                android:text="Submit"
                android:textSize="20dp"
                app:layout_constraintEnd_toStartOf="@+id/cancelButton"
                tools:layout_editor_absoluteY="667dp" />

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:text="Cancel"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="251dp"
                tools:layout_editor_absoluteY="667dp" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>